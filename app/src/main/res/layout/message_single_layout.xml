<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_5">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/size_56dp"
        android:layout_height="@dimen/size_56dp"
        android:id="@+id/chatimage"
        android:src="@drawable/girl1"
        android:layout_margin="@dimen/size_5">

    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/message_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display name"
        android:textStyle="bold"
        android:layout_toRightOf="@id/chatimage"
        android:layout_marginStart="@dimen/size_10dp"
        android:textSize="@dimen/size_18sp"
        >

    </TextView>
    <TextView
        android:id="@+id/message_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message text"
        android:layout_toRightOf="@id/chatimage"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_below="@id/message_displayname"
        android:textSize="@dimen/size_16sp"
        android:layout_marginTop="@dimen/size_3dp"
        android:padding="@dimen/size_7dp"
        android:textColor="@color/color_White"
        android:background="@drawable/custom_message_sing"
        >

    </TextView>
    <TextView
        android:id="@+id/time_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_toRightOf="@id/message_displayname"
        android:layout_marginStart="@dimen/size_10dp"
        android:textSize="@dimen/size_14sp"
        android:layout_marginTop="@dimen/size_5"
        >

    </TextView>

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_message"
        android:layout_alignStart="@+id/message_message"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/chatimage"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/size_5"/>
</RelativeLayout>